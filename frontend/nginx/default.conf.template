upstream localhost {
    server server:8000;
}

server {
    listen 80 default_server;
    listen [::]:80 default_server;

    location /favicon.ico {
        access_log     off;
        log_not_found  off;
    }

    location / {
        root   /usr/share/nginx/html;
        index  index.html;
        try_files $uri $uri/ /index.html;
        add_header 'Content-Type' 'text/html; charset=utf-8';
    }
}
